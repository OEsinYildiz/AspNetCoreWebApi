@model ICollection<CategoryDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<div class="container">
    <div class="row">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#ID</th>
                <th scope="col">Name</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            @foreach (CategoryDto item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>
                        <a asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Guncelle</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>